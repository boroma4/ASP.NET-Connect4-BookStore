@page
@model WebApp.Pages_Authors.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Author</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-route-action="@Model.Action">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Author.FirstName" class="control-label"></label>
                <input asp-for="Author.FirstName" class="form-control" />
                <span asp-validation-for="Author.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.LastName" class="control-label"></label>
                <input asp-for="Author.LastName" class="form-control" />
                <span asp-validation-for="Author.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.YearOfBirth" class="control-label"></label>
                <input asp-for="Author.YearOfBirth" class="form-control" />
                <span asp-validation-for="Author.YearOfBirth" class="text-danger"></span>
            </div>
            @if (Model.SameFound || Model.InvalidYear)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <strong>@Model.ErrorMessage</strong>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @if (Model.Action == "CreateAndGoBack")
    {
        <a asp-page="/Books/Create">Back to creating a book</a>
    }
    @if (Model.Action == null)
    {
        <a asp-page="Index">Back to List</a>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
