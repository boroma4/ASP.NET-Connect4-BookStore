@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center container">
    <h1 class="display-4">Connect4</h1>
    <p>Let's play!</p>

    <a asp-page="./StartNew" asp-route-bot="0" class="box">
        <button type="submit" class="btn btn-outline-info btn-lg">
            Start PVP
        </button>
    </a>
    
    <a asp-page="./StartNew" asp-route-bot="1" class="box">
            <button type="submit" class="btn btn-outline-info btn-lg">
            Start VS Bot
            </button>
        </a>

        <a asp-page="./Load" class="box">
            <button type="submit" class="btn btn-outline-info btn-lg">
            Load game
            </button>
        </a>
</div>

<style>
    .box {
        display: block;
            margin-top: 1%;
            }
    
    .container > div {
        float: left;
    }
</style>